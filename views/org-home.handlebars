<div class="container super">
  <nav class="navbar navbar-expand-lg navbar-light bg-transparent border-bottom">
    <a class="navbar-brand" href="#">Chime</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
    </button>
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/">Logout</a>
      </li>
    </ul>
  </nav>
  <div class="jumbotron">
    <div class="container">
      <h2 class="display-4">{{org}}</h2>
    </div>
  </div>
  <div class="row">
    <div id="messages" class="col-6 offset-2 mb-5">
      <h3>Send a Text Message to your Followers</h3>
      <form>
        <div class="form-group">
        <label for="message">Compose</label><br>
        <input type="text" id="message" class="form-control">
        <small class="form-text text-muted">Check your work.</small>
        </div>
        <button id="send" class="btn btn-warning">Send</button>
      </form>
    </div>
    <div class="col-12">
    <div id="sent-sms" class="col-6 offset-2">
      <h3>Sent messages</h3>
        {{#each messages}}
        <div class="sms-div mb-4 border">
          <p class="sms-date">{{datetime}}</p>
          <p class="sms-text">{{message}}</p>
        </div>
        {{/each}}
        {{mess_error}}
      </div>
    </div>
  </div>
</div>
 