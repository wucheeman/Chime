<div class="container">
  <div class="jumbotron">
    <h1 class="text-center">Chime Homepage</h1>
    <h2 class="text-center">Welcome {{user}}!</h2>
    <a class="text-center" id="browse" href="javascript:location.replace(location.href + '/browse')">Browse for Organizations</a>
    <div class="row">
      <div id="messages" class="col-sm-6 col-centered">
        <h3>My messages</h3>
        {{#each messages}}
        <div class="sms-div">
          <p class="sms-date">{{datetime}}</p>
          <p class="sms-sub">{{sub}}</p>
          <p class="sms-text">{{message}}</p>
          <!--<small>{{date}}</small>-->
        </div>
        {{/each}}
      </div>

      <div id="subscriptions" class="col-sm-6 col-centered">
        <h3>Subscriptions</h3>
        <div class="row">
          <div class="col-sm-1 col-centered">
        {{#each subs}}
        <div>
          <p>{{sub}}</p>
          <button class="subscribe" data-name="{{sub}}" data-sub="true">Subscribed</button>
        </div>
        {{/each}}
        </div>
        </div>
      </div>
    </div>
  </div>
</div>